# Environment Variables for Nicky G. Computers Django App
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.onrender.com,localhost,127.0.0.1

# CSRF trusted origins (include your Render domain)
CSRF_TRUSTED_ORIGINS=https://your-domain.onrender.com

# Database (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=nickygcomputers@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=nickygcomputers@gmail.com
ADMIN_EMAIL=nickygcomputers@gmail.com

# Optional: Custom settings
TIME_ZONE=Africa/Accra

# Render-specific
# RENDER_EXTERNAL_HOSTNAME is set automatically by Render and used in settings.py
# to extend ALLOWED_HOSTS. You normally do not need to set it manually.

# Media uploads (Persistent Disk on Render)
# When using a Render Persistent Disk mounted at /media, set:
# MEDIA_ROOT=/media
# SERVE_MEDIA=True
